@model IEnumerable<DichVuThuCungKVH.Model.SuDungDichVu>
@{
    ViewBag.Title = "LuotSDDV";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mb-4">Lượt sử dụng dịch vụ</h2>
<p>
    @Html.ActionLink("Create New", "Create", new { maKH = ViewBag.MaKH })
</p>
@if (Model.Any())
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ngay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GhiChu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KhachHang.TenKH)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ngay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GhiChu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KhachHang.TenKH)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MaSDDV }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MaSDDV }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MaSDDV }) |
                    @Html.ActionLink("Xem phiếu", "PhieuCuaLuotSDDV", "PhieuNhans", new { id = item.MaSDDV }, null)
                </td>
            </tr>
        }
    </table>
}
else
{
    <p class="alert alert-info">Khách hàng chưa có lượt sử dụng dịch vụ.</p>
}